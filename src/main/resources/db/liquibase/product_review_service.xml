<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

	<changeSet author="create-product-review-service-ddl" id="createTable-productsreview-1.1">
		<createTable tableName="PRODUCT_REVIEWS"
			catalogName="product_review_service">
			<column autoIncrement="true" name="id" type="BIGINT">
				<constraints nullable="false" primaryKey="true" />
			</column>
			<column name="product_id" type="BIGINT" />
			<column name="rating" type="TINYINT" />
			<column name="remarks" type="varchar(2000)" />
			
		</createTable>
	</changeSet>

</databaseChangeLog>